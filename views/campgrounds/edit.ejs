<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>

  <div class="col-6 offset-3">
    <div class="card shadow">
      <div class="card-body">
        <form
          action="/campgrounds/<%=camp._id%>?_method=PUT"
          method="post"
          novalidate
          class="validated-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
              class="form-control"
              type="text"
              name="campground[title]"
              id="title"
              value="<%= camp.title %>"
              required
            />
            <div class="valid-feedback">Looks Good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input
              class="form-control"
              type="text"
              name="campground[location]"
              id="location"
              value="<%= camp.location %> "
              required
            />
            <div class="valid-feedback">Looks Good!</div>
          </div>

          <div class="mb-3">
            <label class="form-label text-left" for="description"
              >Description</label
            >
            <textarea
              class="form-control"
              name="campground[description]"
              id="description"
              cols="30"
              rows="10"
              required
            >
                        <%= camp.description %> </textarea
            >
            <div class="valid-feedback">Looks Good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="price"> Campground Price</label>
            <div class="input-group mb-3">
              <span class="input-group-text" id="price-label">$</span>
              <input
                type="number"
                step="0.01"
                class="form-control"
                aria-label="Amount (to the nearest dollar)"
                name="campground[price]"
                id="price"
                value="<%= camp.price %>"
                required
              />
              <div class="valid-feedback">Looks Good!</div>
            </div>
          </div>
          <div>
            <label class="form-label" for="image">Upload Image </label>
            <input type="file" name="image" id="image" class="mb-3" multiple />
          </div>

          <div class="mb-3">
            <% camp.images.forEach(function(img, i) { %>
            <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" />
            <div class="form-check-inline">
              <input
                type="checkbox"
                id="image-<%=i %>"
                name="deleteImages[]"
                value="<%=img.filename%>"
              />
            </div>
            <label for="image-<%=i %>">Delete?</label>
            <% })%>
          </div>

          <button class="btn btn-success mb-3">Update Campground</button>
        </form>
      </div>
    </div>
  </div>
</div>
